@using EPAM.SUMMER.FORUM.ZHELDAK.ViewModels
@model IEnumerable<CategoryViewModel>

@{
    ViewBag.Title = "MainPage";
}
<br/><br />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1 class="text-center">CATEGORIES</h1>
    </div>
</div>
<br /><br />
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center category">
            @Html.ActionLink(@item.Name, "ShowQuestion", "Question", new {categoryName= @item.Name,categoryId = @item.Id}, null)
        </div>
    </div>
}

