@using EPAM.SUMMER.FORUM.ZHELDAK.ViewModels.CategoryModels
@model IEnumerable<CategoryViewModel>

<div class="col-md-8 col-md-offset-2">
    <p>@Html.ActionLink("Create Category", "Create", "Category")</p>
    <table class="table">
        <tr>
            <th style="width: 16%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 14%">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>@Html.ActionLink("Edit", "Edit", "Category", new {id = item.Id}, new {@class = "text-warning viewDialog" , data_dialog_title = "Edit" })</td>
                <td>@Ajax.ActionLink("Delete", "Delete", "Category", new {id = item.Id}, new AjaxOptions {Confirm = "Are you sure you want to remove this category?", UpdateTargetId = "update-admin"}, new {@class = "text-danger"})</td>
            </tr>
        }
    </table>
   
</div>
