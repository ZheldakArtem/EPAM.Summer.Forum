@using EPAM.SUMMER.FORUM.ZHELDAK.ViewModels
@model IEnumerable<CategoryViewModel>


<table class="table">
    <tr><th>@Html.ActionLink("Create Category", "Create", "Category")</th><th></th><th></th></tr>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Edit / Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Category", new {id = item.Id}, null) |
                @Html.ActionLink("Delete", "Delete", "Category", new {id = item.Id}, null)
            </td>
        </tr>
    }

</table>
