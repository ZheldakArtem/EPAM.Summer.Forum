@using EPAM.SUMMER.FORUM.ZHELDAK.ViewModels.ComentModels
@model IEnumerable<CommentForAccountModel>

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Select the correct comment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="QuestionId" value="@ViewBag.QuestionId" />
    <div class="row ">
        @foreach (var item in Model)
        {
            <div class="form-group">
                <div class="row col-md-offset-3">
                    <div class="col-md-1">
                        <input type="checkbox" @if (item.IsRight) { @: checked="checked"
                                                                              } name="CommentId" value="@item.CommentId" />
                    </div>
                    <div class="col-md-7">
                        <h6 class="user-name">@item.FirstName @item.LastName</h6>
                        <div class="textComment">@item.Comment</div>
                    </div>
                </div>
            </div>
        }


        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

